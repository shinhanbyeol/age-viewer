{
  "name": "ag-viewer-frontend",
  "version": "0.1.0",
  "private": true,
  "license": "Apache-2.0",
  "licenses": [
    {
      "type": "Apache-2.0",
      "url": "https://www.apache.org/licenses/LICENSE-2.0"
    }
  ],
  "main": "electronApp.js",
  "scripts": {
    "clean": "mkdir -p ./resources/backend && mkdir -p dir ./resources/frontend && rm -rf ./resources/backend/build && rm -rf ./resources/frontend/build",
    "prebuild": "cd .. && npm run build-back && npm run build-front",
    "prebundle": "cp -r ../backend/build ./resources/backend/build && cp -r ../frontend/build ./resources/frontend/build",
    "bundle:test": "clean && prebuild &&  prebundle && electron electronApp.js",
    "bundle:osx": "clean && prebuild &&  prebundle && electron-builder build --mac",
    "bundle:linux": "clean && prebuild &&  prebundle && npm run build:linux32 && npm run build:linux64",
    "bundle:linux32": "clean && prebuild &&  prebundle && electron-builder build --linux --ia32",
    "bundle:linux64": "clean && prebuild &&  prebundle && electron-builder  build --linux --x64",
    "bundle:win": "clean && prebuild &&  prebundle && npm run build:win32 && npm run build:win64",
    "bundle:win32": "clean && prebuild &&  prebundle && electron-builder  build --win --ia32",
    "bundle:win64": "clean && prebuild &&  prebundle && electron-builder  build --win --x64"
  },
  "dependencies": {
    "@babel/runtime": "^7.19.0",
    "antlr4": "4.9.3",
    "cookie-parser": "~1.4.5",
    "cors": "^2.8.5",
    "csv": "^5.5.0",
    "debug": "~4.3.1",
    "dotenv": "^16.0.2",
    "ejs": "^3.1.6",
    "express": "~4.17.1",
    "express-session": "^1.17.1",
    "http-status": "^1.5.0",
    "morgan": "~1.10.0",
    "multer": "^1.4.2",
    "npm-run-all": "^4.1.5",
    "pegjs": "^0.10.0",
    "pg": "^8.5.1",
    "pg-types": "^2.2.0",
    "uuid": "^8.3.2",
    "winston": "^3.3.3",
    "winston-daily-rotate-file": "^4.5.0"
  },
  "devDependencies": {
    "electron": "20.1.4",
    "electron-builder": "^23.3.3"
  },
  "build": {
    "productName": "age-viewer-desktop",
    "appId": "age.viewer.apache.org",
    "asar": true,
    "protocols": {
      "name": "age-viewer-desktop",
      "schemes": [
        "age-viewer-desktop"
      ]
    },
    "mac": {
      "target": [
        "default"
      ]
    },
    "dmg": {
      "title": "age-viewer"
    },
    "win": {
      "target": [
        "zip",
        "nsis"
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb",
        "rpm",
        "zip",
        "tar.gz"
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "directories": {
      "buildResources": "resources/installer/",
      "output": "dist/",
      "app": "."
    }
  }
}
